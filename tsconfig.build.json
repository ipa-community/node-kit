{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "module": "Preserve",
    "moduleResolution": "bundler",
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "outDir": "dist/types"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "tests/**/*"
  ]
}
